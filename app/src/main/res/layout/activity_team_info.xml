<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thelazyman193.premierleaguenews.activity.TeamInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/status_bar_color">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ArsenalFC"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/img_size_normal"
            android:layout_height="@dimen/img_size_normal"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_img"
            android:src="@mipmap/ic_back" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        app:tabMode="fixed"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status_bar_color"
        app:tabBackground="@color/status_bar_color"
        app:tabTextColor="#FFFF">

    </android.support.design.widget.TabLayout>
    <!--
    news
    squad
    fixture
    -->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
