<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@android:color/white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="1dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/status_bar_color">

        <ImageView

            android:layout_width="@dimen/img_size_normal"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_logo_pre" />

        <ImageView
            android:layout_marginTop="4dp"
            android:id="@+id/imgHomeTeam"
            android:layout_width="@dimen/img_size_normal"
            android:layout_height="match_parent"
            android:background="#FFFF"
            android:padding="6dp"
            android:src="@mipmap/ic_ars" />

        <TextView
            android:id="@+id/tvHomeTeam"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgHomeTeam"
            android:gravity="center"
            android:text="ARS"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAwayTeam"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgAwayTeam"
            android:gravity="center"
            android:text="LIV"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginTop="4dp"
            android:id="@+id/imgAwayTeam"
            android:layout_width="@dimen/img_size_normal"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:padding="6dp"
            android:src="@mipmap/ic_liv" />
    </RelativeLayout>

</LinearLayout>